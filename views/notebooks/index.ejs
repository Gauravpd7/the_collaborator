<%- include("../partials/header") %>

	<div class="container">
		<header class="jumbotron">
			<h1>
			Welcome To Your Tracker!
			</h1>
			<p>
				Keep track of your projects and meetings using Tracker! Create daily logs, write notes, upload files, images, and share them with your colleagues.
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="notebooks/new">Create Project</a>
			</p>
		</header>
	</div>


	<div class="row" style="display:flex; flex-wrap:wrap">
		<% notebooks.forEach(function(notebook){%>
		<% var str = "5ecfffc6cecefa05355a5b3d" %>
		<%if(!notebook.author.id.equals(str)){ %> 
		<div class="col-md-3 col-sm-6 text-center">
			<div class="thumbnail">
				<img src="<%= notebook.image %>">
				<div class="caption text-center">
					<h4><%= notebook.name%></h4>
				</div>
				<p>
					<a href="/notebooks/<%=notebook._id%>" class="btn btn-primary blockbtn">Open</a>
				</p>
			</div>
		</div>
		<%}%>
		<% }); %>
	</div>	

<%- include("../partials/footer") %>